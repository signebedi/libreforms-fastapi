                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_manage_users' ) }}">Manage Users</a>
                            <div class="dropdown-header">Groups</div>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_create_group' ) }}">Create Group</a>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_manage_groups' ) }}">Manage Groups</a>
                            <div class="dropdown-header">Relationships</div>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_create_relationship_type' ) }}">Create Relationship Type</a>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_manage_relationship_types' ) }}">Manage Relationship Types</a>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_create_user_relationship' ) }}">Create User Relationship</a>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_manage_user_relationships' ) }}">Manage User Relationships</a>
                            <div class="dropdown-header">Settings</div>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_write_form_config' ) }}">Edit Form Config</a>
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_log' ) }}">Transaction Log</a>
                            {% if config.DOCS_ENABLED %}
                            <a class="dropdown-item" href="{{ url_for( 'ui_admin_edit_docs' ) }}">Edit Docs</a>
                            {% endif %}
                            {# <a class="dropdown-item" href="{{ url_for( 'ui_admin_site_config' ) }}">Site Config</a> #}
                            {# <a class="dropdown-item" href="{{ url_for( 'ui_admin_smtp_config' ) }}">SMTP Config</a> #}
                            {# <a class="dropdown-item" href="{{ url_for( 'ui_admin_relational_database_config' ) }}">Relational Database</a> #}
                            {# <a class="dropdown-item" href="{{ url_for( 'ui_admin_document_database_config' ) }}">Document Database</a> #}
                        </div>
                    </li>

                    {% endif %}

                    {% if config['SEARCH_BAR_ENABLED'] %}
                    <form id="searchForm" class="d-flex">
                        <input class="form-control me-sm-2" type="search" id="searchTerm" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" onclick="searchQuery(this.value);" type="submit">Search</button>
                    </form>
                    {% endif %}

                    {% else %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('ui_auth_login') }}">Login</a>
                    </li>

                    {% if not config['DISABLE_NEW_USERS'] %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('ui_auth_create') }}">Create User</a>
                    </li>
                    
                    {% endif %}

                    {% endif %}

                    {% if config['DISABLE_FOOTER'] %}

                    {# <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="offcanvas" href="#offcanvasPrivacy" role="button" aria-controls="offcanvasPrivacy">
                        Privacy
